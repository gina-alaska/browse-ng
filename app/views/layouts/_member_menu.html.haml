%li.dropdown
  = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
    %img{ src: current_user.avatar, style: 'width: 20px;' }
    = current_user
    %b.caret
  %ul.dropdown-menu
    %li
      = link_to 'Preferences', preferences_path
    - if current_user.member?
      %li
        = link_to 'Posts', admin_posts_path
      %li
        = link_to 'Users', admin_memberships_path
    %li.divider
    %li
      = link_to '/logout' do
        Logout