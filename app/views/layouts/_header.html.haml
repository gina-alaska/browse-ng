.container 
  .title
    = image_tag "sdmi-banner.png", :title => "SDMI", style: "width: 100%;"
  .navbar.navbar-default.navbar-static-top
    .navbar-header
      %button.navbar-toggle{ type: "button", data: { toggle: "collapse", target:"#navbar-collapse-1" } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href:"/" } browse.alaskamapped.org
    #navbar-collapse-1.navbar-collapse.collapse
      %ul.nav.navbar-nav.pull-right
        %li
          = link_to search_path do
            %i.fa.fa-search
            Search
        %li
          = link_to 'https://uafgina.zendesk.com/anonymous_requests/new' do
            %i.fa.fa-envelope
            Contact Support
        %li
          = link_to '/attribution' do
            %i.fa.fa-info-circle
            Attributions
        - if signed_in?
          - if current_user.member?
            = render 'layouts/member_menu'
          - else
            %li
              = link_to '/logout' do
                %img{ src: current_user.avatar, style: 'width: 20px;' }
                Logout
        - else
          %li
            = link_to '/login' do
              %i.fa.fa-lock
              Login