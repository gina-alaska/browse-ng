= form_for([:admin, @membership], html: { role: 'form', class: 'form-horizontal'}) do |f|
  - if @membership.errors.any?
    #error_explanation.alert.alert-danger
      %h2
        = pluralize(@membership.errors.count, "error")
        prohibited this admin_membership from being saved:
      %ul
        - @membership.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control'
  .actions.pull-right
    = link_to 'Cancel', admin_memberships_path, class: 'btn btn-default'
    = f.submit class: 'btn btn-primary'
